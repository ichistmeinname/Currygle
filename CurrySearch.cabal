stability:     experimental
category:      Text, Data
synopsis:      CurrySearch
homepage:      tba
description:   CurrySearch - search modules, function and types
cabal-version: >=1.6
build-type:    Simple
-- tested-with:   ghc-7.0.3

-- ------------------------------------------------------------

executable curryIndexer
  main-is: curryIndexer.hs

  hs-source-dirs: src
  
  other-modules: IndexTypesC
               , CurryInfo

  build-depends: ghc                    >= 7
               , base                   >= 4    && < 5
               , Holumbus-Searchengine  >= 1.2.2  && < 2
               , binary                 >= 0.5  && < 1
               , bytestring             >= 0.9  && < 1
               , bzlib                  >= 0.4  && < 1
               , filepath               >= 1    && < 2
               , haskell98              >= 1    && < 2
               -- , hxt                    >= 9.1  && < 10
               -- , hxt-cache              >= 9    && < 10
               -- , hxt-charproperties     >= 9    && < 10
               -- , hxt-curl               >= 9    && < 10
               -- , hxt-http               >= 9    && < 10
               -- , hxt-regex-xmlschema    >= 9    && < 10
               -- , hxt-xpath              >= 9.1  && < 10
               -- , network                >= 2.1  && < 3
               , parsec                 >= 2.1  && < 4
               , process                >= 1    && < 2
               , tar                    >= 0.3  && < 1
               , zlib                   >= 0.5  && < 1 

  if impl( ghc < 7.4 )
    build-depends:
                 containers             >= 0.2 && < 0.4.2
               , deepseq                >= 1.1 && < 1.2
  else
    build-depends:
                 containers             >= 0.4.2
               , deepseq                >= 1.2

  ghc-options: -threaded
               -rtsopts
               -Wall
               -fwarn-tabs
               -funbox-strict-fields
               -fno-warn-unused-do-bind
               


-- ------------------------------------------------------------

executable curryServer
  main-is: Main.hs

  hs-source-dirs: src

  build-depends: ghc                        >= 7
               , base                       >= 4     && < 5
               , binary                     >= 0.5
               , bytestring                 >= 0.9.1 && < 0.10
               , filepath                   == 1.2.0.*
               , heist                      >= 0.5   && < 0.6
               , Holumbus-Searchengine      >= 1.2
               , hxt                        >= 9.1
               , hxt-charproperties         >= 9
               , hxt-regex-xmlschema        >= 9
               , hxt-unicode                >= 9
               , json                       >= 0.4   && < 1
               , MonadCatchIO-transformers  >= 0.2.1 && < 0.3
               , mtl                        >= 2     && < 3
               , network                    >= 2.3
               , snap                       >= 0.4   && < 0.6
               , snap-core                  >= 0.4   && < 0.6
               , snap-server                >= 0.4   && < 0.6
               , text                       >= 0.11  && < 0.12
               , time                       >= 1.1   && < 1.3
               , xhtml-combinators          == 0.2.*
               , xmlhtml                    == 0.1.*

  if impl( ghc < 7.4 )
    build-depends:
                 containers                 >= 0.2 && < 0.4.2
               , deepseq                    >= 1.1 && < 1.2
  else
    build-depends:
                 containers                 >= 0.4.2
               , deepseq                    >= 1.2

  extensions:    TypeSynonymInstances MultiParamTypeClasses

  ghc-options: -threaded
               -O2
               -Wall
               -fwarn-tabs
               -funbox-strict-fields
               -fno-warn-unused-do-bind
               
-- ------------------------------------------------------------
